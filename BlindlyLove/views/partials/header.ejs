<div class="header-top">
  <button class="hamburger" id="hamburger-btn" aria-label="메뉴 열기/닫기">
    <span></span>
    <span></span>
    <span></span>
  </button>

  <div class="top-controls">
    <div class="left-controls">
      <% if (
        ['/signup', '/editor', '/login', '/write'].includes(currentPath) ||
        currentPath.startsWith('/post') ||
        currentPath.startsWith('/edit')
      ) { %>
        <!-- 로고 출력 -->
        <a href="/" class="logo-link">
          <img src="/assets/images/logo.png" alt="로고" class="floating-home-logo" />
        </a>
      <% } %>

      <!-- ✅ 데스크탑 메뉴 -->
      <% if (currentPath !== '/signup' && currentPath !== '/login') { %>
        <nav class="desktop-menu">
          <ul>
            <li><a href="/tools/health-check">온라인 건강 진단 도구</a></li>
            <li><a href="/tools/games">무료 온라인 게임</a></li>
          </ul>
        </nav>
      <% } %>
    </div>

    <div class="right-controls">
      <% if (currentPath !== '/signup' && currentPath !== '/login') { %>
        <div class="auth-buttons">
          <% if (user) { %>
            <% if (Number(user.is_admin) === 1) { %>
              <span class="welcome-text"><strong><%= user.nickname %></strong>님 안녕하세요!</span>
              <a href="/write" class="auth-btn write-post"> <i class="fas fa-pen"></i> 글쓰기</a>
            <% } %>
            <a href="/logout" class="auth-btn logout">로그아웃</a>
          <% } else { %>
            <a class="auth-btn signup" onclick="delayNavigation(event, '/signup')">회원가입</a>
            <button class="auth-btn login" id="login" type="button">로그인</button>
          <% } %>
        </div>
      <% } %>

      <div class="light-switch"
           role="switch"
           aria-checked="false"
           aria-label="다크 모드 전환"
           tabindex="0"
           id="mode-toggle-accessible">
        <span class="switch-label"><span class="switch-handle"></span></span>
      </div>
    </div>
  </div>

  <style>
    .desktop-menu {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-left: 1.5rem;
    }

    .desktop-menu ul {
      list-style: none;
      display: flex;
      gap: 1.5rem;
      margin: 0;
      padding: 0;
    }

    .desktop-menu a {
      text-decoration: none;
      color: #333;
      font-weight: bold;
      font-size: 0.95rem;
      transition: color 0.2s ease;
    }

    .desktop-menu a:hover {
      color: #007bff;
    }

    @media (max-width: 640px) {
      .desktop-menu {
        display: none;
      }

      .auth-buttons {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        position: relative;
      }

      .welcome-text {
        position: absolute;
        bottom: -1.2rem;
        top: 2.5rem;
        right: -1rem;
        margin-right: -3rem;
        font-size: 0.75rem;
        white-space: nowrap;
        color: #666;
        pointer-events: none;
      }
    }
  </style>

  <script>
    function delayNavigation(e, url) {
      e.preventDefault();
      setTimeout(() => {
        window.location.href = url;
      }, 100);
    }
  </script>
</div>

<!-- ✅ 모바일 메뉴 -->
<nav class="mobile-menu" id="mobile-menu">
  <div class="mobile-menu-header">
    <!-- 필요시 로고나 닫기 버튼 -->
  </div>

  <div class="mobile-menu-links">
    <a href="/tools/health-check">온라인 건강 진단 도구</a>
    <a href="/tools/games">무료 온라인 게임</a>
  </div>

  <div class="social-login-buttons">
    <!-- 기타 로그인 버튼 등 -->
  </div>

  <style>
    .mobile-menu-links {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding: 1.5rem;
    }

    .mobile-menu-links a {
      font-size: 1rem;
      color: #333;
      text-decoration: none;
      font-weight: bold;
    }

    .mobile-menu-links a:hover {
      color: #007bff;
    }
  </style>
</nav>

<!-- 로그인 팝업 -->
<div id="loginBox" class="login-box" onclick="event.stopPropagation()">
  <form action="/login" method="POST" class="pop-up-form">
    <input type="text" name="id" placeholder="아이디" required>
    <input type="password" name="password" placeholder="비밀번호" required>
    <button type="submit">로그인</button>

    <div class="login-footer-links">
      <small>
        아직 회원이 아니세요? <a href="/signup">회원가입</a> <br>
        비밀번호가 기억나지 않으신다면? <a href="/reset-password">비밀번호 찾기</a>
      </small>
    </div>
  </form>
</div>
