<!DOCTYPE html>
<html lang="ko">
  <%- include('partials/head') %>
  <link rel="stylesheet" href="/assets/css/index.css" />

  <body class="light">
    <%- include('partials/header') %>

    <!-- 프리로더 -->
    <div id="preloader">
      <div class="spinner"></div>
    </div>

    <!-- ✅ 전체 레이아웃 시작 -->
    <div class="full-layout">
      
      <!-- 좌측 패널 -->
      <aside class="side-panel main-panel-only">  <!-- ✅ 광고 박스 -->
        <div class="ad-box">
          <!-- side-panel-ad -->
          <ins class="adsbygoogle"
               style="display:block"
               data-ad-client="ca-pub-2585969189290118"
               data-ad-slot="5779573113"
               data-ad-format="auto"
               data-full-width-responsive="true"></ins>
          <script>
               (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>
      </aside>

      <!-- 가운데 콘텐츠 -->
      <div class="main-layout">
        <div class="main-panel">
          <div class="cherry-container">
            <canvas id="cherry-canvas"></canvas>
          </div>

          <div class="search-container">
            <!-- 로고 -->
            <a href="/">
              <img src="/assets/images/1.png" alt="blindly.love 로고" class="site-logo" />
            </a>
          
            <!-- ✅ 검색창 & 캐릭터 같이 감싸는 박스 -->
            <div class="search-wrapper">
              <div class="search-position-anchor">
                <div class="character-stand">
                  <object id="character-svg" type="image/svg+xml" data="/assets/images/characters.svg"></object>
                </div>
                <form method="get" action="/search" class="search-form">
                  <input type="text" name="q" class="search-box" placeholder="필요한 정보를 입력하세요..." />
                  <button type="submit" class="icon-submit-btn">
                    <i class="fas fa-search"></i>
                  </button>
                </form>
              </div>
            </div>
          </div>

          <%
          function choosePostposition(word) {
            if (!word || word.length === 0) return '';
            const lastChar = word[word.length - 1];
            const lastCode = lastChar.charCodeAt(0);
            const hasBatchim = (lastCode - 44032) % 28 !== 0;
            return hasBatchim ? '으로' : '로';
          }
        %>
        
        <% if (isSearch && searchKeyword) { %>
          <p class="search-result-msg">
            ‘<%= searchKeyword %>’<%= choosePostposition(searchKeyword) %> 검색 결과입니다.
          </p>
        <% } %>

          <!-- 🟡 동적으로 생성된 카테고리 탭 -->
          <div class="tabs">
            <button class="tab active" onclick="filterBoard('all')">전체글</button>
            <% categories.forEach(category => { %>
              <button class="tab" onclick="filterBoard('<%= category %>')"><%= category %></button>
            <% }) %>
          </div>

          <!-- 🟡 게시글 테이블 (데스크탑) -->
          <table class="board-table">
            <thead>
              <tr>
                <th>제목</th>
                <th>작성자</th>
                <th>카테고리</th>
                <th>날짜</th>
              </tr>
            </thead>
            <tbody id="board-content">
              <% posts.forEach(post => { %>
                <tr data-category="<%= post.categories %>">
                  <td>
                    <div class="table-title-and-actions" style="display: flex; justify-content: space-between; align-items: center;">
                      <a href="/post/<%= post.id %>">
                        <%= post.title %><% if (post.is_private) { %> 🔒<% } %>
                      </a>
                      <% if (user && user.id === post.user_id) { %>
                        <div class="action-icons">
                          <a href="/edit/<%= post.id %>" class="icon-btn edit-btn" title="수정">
                            <i class="fas fa-pen"></i>
                          </a>
                          <form action="/delete/<%= post.id %>" method="POST" onsubmit="return confirm('정말 삭제할까요?')">
                            <button type="submit" class="icon-btn delete-btn" title="삭제">
                              <i class="fas fa-trash"></i>
                            </button>
                          </form>
                        </div>
                      <% } %>
                    </div>
                  </td>
                  <td><%= post.author %></td>
                  <td><%= post.categories %></td>
                  <td><%= post.created_at.toISOString().slice(0, 10) %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>

          <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2585969189290118"
     crossorigin="anonymous"></script>
<!-- 모바일용 1 -->
<ins class="adsbygoogle"
     style="display:block"
     data-ad-client="ca-pub-2585969189290118"
     data-ad-slot="8866052836"
     data-ad-format="auto"
     data-full-width-responsive="true"></ins>
<script>
     (adsbygoogle = window.adsbygoogle || []).push({});
</script>

          <!-- ✅ 모바일 전용 게시판 리스트 -->
         <!-- ✅ 모바일 전용 게시판 리스트 -->
<div class="mobile-board-list">
  <% posts.forEach(post => { %>
    <div class="mobile-post-item" data-category="<%= post.categories %>">
      <div class="post-title-and-actions"> 
        <a href="/post/<%= post.id %>" class="post-title">
          <%= post.title %><% if (post.is_private) { %> 🔒<% } %>
        </a>
        <% if (user && user.id === post.user_id) { %>
          <div class="action-icons">
            <a href="/edit/<%= post.id %>" class="icon-btn edit-btn" title="수정">
              <i class="fas fa-pen"></i>
            </a>
            <form action="/delete/<%= post.id %>" method="POST" onsubmit="return confirm('정말 삭제할까요?')">
              <button type="submit" class="icon-btn delete-btn" title="삭제">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          </div>
        <% } %>
      </div>

      <div class="post-info">
        <%= post.author %> | <%= post.created_at.toISOString().slice(0, 10) %> | 조회수 없음 | <%= post.categories %>
      </div>
    </div>
  <% }) %>
</div>
          
        </div>
      </div>

      <!-- 우측 패널 -->
      <aside class="side-panel right-panel-only">
        <div class="ad-box">
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2585969189290118"
     crossorigin="anonymous"></script>
<!-- 데스크톱-오른쪽-패널 -->
<ins class="adsbygoogle"
     style="display:block"
     data-ad-client="ca-pub-2585969189290118"
     data-ad-slot="5988925289"
     data-ad-format="auto"
     data-full-width-responsive="true"></ins>
<script>
     (adsbygoogle = window.adsbygoogle || []).push({});
</script>
</div>
      </aside>

    </div>
    <!-- ✅ 전체 레이아웃 끝 -->

    <script>
      // 이 스크립트 블록은 index.ejs 파일의 </body> 태그 닫히기 직전에 위치해야 합니다.
    
      // ✅ 커스텀 메시지 박스 및 입력 박스 구현 (alert, prompt 대체)
      // editor.ejs에 있는 함수와 동일하게 복사하여 index.ejs에서도 사용 가능하게 합니다.
      function createMessageBox(message, isConfirm = false, onConfirm = null) {
          let modal = document.getElementById('customMessageModal');
          if (!modal) {
              modal = document.createElement('div');
              modal.id = 'customMessageModal';
              modal.style = `
                  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
                  background: rgba(0,0,0,0.5); display: flex; justify-content: center;
                  align-items: center; z-index: 1000;
              `;
              document.body.appendChild(modal);
          }
          modal.innerHTML = `
              <div style="background: white; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); max-width: 400px; width: 90%; text-align: center;">
                  <p style="color: black;">${message}</p>
                  ${isConfirm ? `
                      <button id="confirmBtn" style="padding: 8px 15px; margin: 5px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer;">확인</button>
                      <button id="cancelBtn" style="padding: 8px 15px; margin: 5px; background-color: #6c757d; color: white; border: none; border-radius: 5px; cursor: pointer;">취소</button>
                  ` : `
                      <button id="okBtn" style="padding: 8px 15px; margin: 5px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer;">확인</button>
                  `}
              </div>
          `;
          modal.style.display = 'flex';
    
          if (isConfirm) {
              document.getElementById('confirmBtn').onclick = () => {
                  modal.style.display = 'none';
                  if (onConfirm) onConfirm();
              };
              document.getElementById('cancelBtn').onclick = () => {
                  modal.style.display = 'none';
              };
          } else {
              document.getElementById('okBtn').onclick = () => {
                  modal.style.display = 'none';
                  if (onConfirm) onConfirm();
              };
          }
      }
    
      function showCustomMessage(message, isConfirm = false, onConfirm = null) {
          createMessageBox(message, isConfirm, onConfirm);
      }
    
      // showCustomInput은 이 시나리오에서 직접 사용되지 않지만,
      // 일관성을 위해 필요하다면 editor.ejs에서처럼 추가할 수 있습니다.
      // function showCustomInput(...) { ... }
    
      document.addEventListener('DOMContentLoaded', () => {
        const postLinks = document.querySelectorAll('.post-item a'); // 모든 게시물 링크 선택 (예: .post-item 클래스 안에 링크가 있다고 가정)
    
        postLinks.forEach(link => {
          link.addEventListener('click', async (event) => {
            const postId = event.currentTarget.dataset.postId || event.currentTarget.href.split('/').pop(); // data-post-id 속성 또는 href에서 ID 추출
            
            // 서버에 해당 글의 상태를 비동기적으로 요청하여 권한 확인
            try {
              const response = await fetch(`/post/${postId}`);
              const data = await response.json(); // 서버에서 JSON 응답을 기대
    
              if (data.success === false) { // 서버에서 접근 거부 메시지를 보낸 경우
                event.preventDefault(); // 기본 링크 이동 방지
                showCustomMessage(data.message); // 알림창 표시
              }
              // else: success가 true이면 기본 링크 이동을 허용 (페이지 이동)
            } catch (error) {
              // fetch 오류 발생 (네트워크 문제, 서버 응답이 JSON이 아닌 경우 등)
              console.error('게시글 정보 불러오기 오류:', error);
              // 서버에서 HTML 403 페이지를 보낼 때 이쪽으로 올 수 있습니다.
              // 이 경우 기본 링크 이동을 허용하여 기존 403 페이지로 이동하게 하거나,
              // 다른 알림 메시지를 표시할 수 있습니다.
              // 여기서는 안전하게 기본 동작을 허용하여 기존 403 페이지로 이동하도록 둡니다.
            }
          });
        });
      });
    </script>
    
    <%- include('partials/footer') %>
    <%- include('partials/scripts') %>
  </body>
</html>
