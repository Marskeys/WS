      <!-- üü° Í∞ÄÏö¥Îç∞ ÏΩòÌÖêÏ∏† -->
      <div class="main-layout">
        <div class="main-panel">
          <div class="cherry-container">
            <canvas id="cherry-canvas"></canvas>
          </div>

          <div class="search-container">
            <!-- üü° Î°úÍ≥† -->
            <a href="/">
              <img src="/assets/images/logo.png" alt="blindly.love Î°úÍ≥†" class="site-logo" />
            </a>

            <!-- üü° Í≤ÄÏÉâÏ∞Ω & Ï∫êÎ¶≠ÌÑ∞ Í∞ôÏù¥ Í∞êÏã∏Îäî Î∞ïÏä§ -->
            <div class="search-wrapper">
              <div class="search-position-anchor">
                <div class="character-stand">
                  <object id="character-svg" type="image/svg+xml" data="/assets/images/characters.svg"></object>
                </div>
                <form method="get" action="/search" class="search-form">
                  <input type="text" name="q" class="search-box" placeholder="ÌïÑÏöîÌïú Ï†ïÎ≥¥Î•º ÏûÖÎ†•ÌïòÏÑ∏Ïöî..." />
                  <button type="submit" class="icon-submit-btn">
                    <i class="fas fa-search"></i>
                  </button>
                </form>
              </div>
            </div>
          </div>

          <!-- üü° Í≤ÄÏÉâ Í≤∞Í≥º ÌëúÏãúÌï† Îïå ÌïúÍµ≠Ïñ¥ Ï°∞ÏÇ¨ ÏÑ†ÌÉù Î∞©Î≤ï -->
          <%
            function choosePostposition(word) {
              if (!word || word.length === 0) return '';
              const lastChar = word[word.length - 1];
              const lastCode = lastChar.charCodeAt(0);
              const hasBatchim = (lastCode - 44032) % 28 !== 0;
              return hasBatchim ? 'ÏúºÎ°ú' : 'Î°ú';
            }
          %>

          <!-- üü° Í≤ÄÏÉâ Í≤∞Í≥º ÏïàÎÇ¥ Î©òÌä∏ -->
          <% if (isSearch && searchKeyword) { %>
            <p class="search-result-msg">
              ‚Äò<%= searchKeyword %>‚Äô<%= choosePostposition(searchKeyword) %> Í≤ÄÏÉâ Í≤∞Í≥ºÏûÖÎãàÎã§.
            </p>
          <% } %>

          <!-- üü° ÎèôÏ†ÅÏúºÎ°ú ÏÉùÏÑ±Îêú Ïπ¥ÌÖåÍ≥†Î¶¨ ÌÉ≠ -->
          <div class="tabs">
            <button class="tab active" onclick="filterBoard('all')">Ï†ÑÏ≤¥Í∏Ä</button>
            <% categories.forEach(category => { %>
              <button class="tab" onclick="filterBoard('<%= category %>')"><%= category %></button>
            <% }) %>
          </div>

          <!-- üü° Í≤åÏãúÍ∏Ä Î¶¨Ïä§Ìä∏ (Îç∞Ïä§ÌÅ¨ÌÉë) -->
          <table class="board-table">
            <thead>
              <tr>
                <th>Î≤àÌò∏</th>
                <th>Ï†úÎ™©</th>
                <th>ÏûëÏÑ±Ïûê</th>
                <th>Ïπ¥ÌÖåÍ≥†Î¶¨</th>
                <th>ÎÇ†Ïßú</th>
              </tr>
            </thead>
            <tbody id="board-content">
              <% posts.forEach(post => { %>
                <tr data-category="<%= post.categories %>">
                  <td><%= post.id %></td>
                  <td>
                    <div class="post-title-and-actions">
                    <a href="/post/<%= post.id %>"
                      class="post-detail-link <%= post.is_pinned == 1 ? 'pinned-title' : '' %>"
                      data-post-id="<%= post.id %>"
                      data-is-private="<%= post.is_private ? '1' : '0' %>"
                      data-post-user-id="<%= post.user_id %>">
                      
                     <% 
                       const now = new Date();
                       const createdAt = new Date(post.created_at);
                       const updatedAt = new Date(post.updated_at);
                       const isNew = (now - createdAt) < 1000 * 60 * 60 * 24;
                       const isEdited = updatedAt > createdAt;
                     %>
                   
                     <% if (isEdited) { %>
                      <span class="label-icon edited-icon"></span>
                    <% } else if (isNew) { %>
                      <span class="label-icon new-icon"></span>
                    <% } %>
               
            
                         <% if (post.is_pinned) { %><span>üìå</span><% } %>
                        <%= post.title %><% if (post.is_private) { %> <i class="fas fa-lock"></i><% } %>
                      </a>
                      <% if (user && user.id === post.user_id) { %>
                        <div class="action-icons">
                          <a href="/edit/<%= post.id %>" class="icon-btn edit-btn" title="ÏàòÏ†ï">
                            <i class="fas fa-pen"></i>
                          </a>
                          <form action="/delete/<%= post.id %>" method="POST" class="delete-post-form">
                            <button type="submit" class="icon-btn delete-btn" title="ÏÇ≠Ï†ú">
                              <i class="fas fa-trash"></i>
                            </button>
                          </form>
                        </div>
                      <% } %>
                      </div>
                  </td>
                  <td><%= post.author %></td>
                  <td><%= post.categories %></td>
                  <td><%= post.created_at.toISOString().slice(0, 10) %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>

          <!-- üü° Í≤åÏãúÍ∏Ä Î¶¨Ïä§Ìä∏ (Î™®Î∞îÏùº) -->
          <div class="mobile-board-list">
            <% posts.forEach(post => { %>
              <div class="mobile-post-item" data-category="<%= post.categories %>">
                <div class="post-title-and-actions">
                  <span class="post-id" style="font-size: 0.85rem; color: #aaa; margin-right: 0.5rem;">#<%= post.id %></span> <!-- üîº Ï∂îÍ∞Ä -->
                  <% if (post.is_pinned) { %>
                    <span class="pinned-icon" title="ÏÉÅÎã® Í≥†Ï†ï" style="margin-right: 0.3rem;">üìå</span>
                  <% } %>
                  <a href="/post/<%= post.id %>"
                    class="post-title post-detail-link <%= post.is_pinned == 1 ? 'pinned-title' : '' %>"
                    data-post-id="<%= post.id %>"
                    data-is-private="<%= post.is_private ? '1' : '0' %>"
                    data-post-user-id="<%= post.user_id %>">
                 
                   <% 
                     const now = new Date();
                     const createdAt = new Date(post.created_at);
                     const updatedAt = new Date(post.updated_at);
                     const isNew = (now - createdAt) < 1000 * 60 * 60 * 24;
                     const isEdited = updatedAt > createdAt;
                   %>
                 
                   <% if (isEdited) { %>
                    <span class="label-icon edited-icon"></span>
                  <% } else if (isNew) { %>
                    <span class="label-icon new-icon"></span>
                  <% } %>
               
              
                    <%= post.title %><% if (post.is_private) { %> <i class="fas fa-lock"></i><% } %>
                  </a>
                  <% if (user && user.id === post.user_id) { %>
                    <div class="action-icons">
                      <a href="/edit/<%= post.id %>" class="icon-btn edit-btn" title="ÏàòÏ†ï">
                        <i class="fas fa-pen"></i>
                      </a>
                      <form action="/delete/<%= post.id %>" method="POST" class="delete-post-form">
                        <button type="submit" class="icon-btn delete-btn" title="ÏÇ≠Ï†ú">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  <% } %>
                </div>
                <div class="post-info">
                  <%= post.author %> | <%= post.created_at.toISOString().slice(0, 10) %> | Ï°∞ÌöåÏàò ÏóÜÏùå | <%= post.categories %>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>

      <!-- üü° Ïö∞Ï∏° Ìå®ÎÑê -->
      <aside class="side-panel right-panel-only">
