<header class="mk-header" style="background: #000; padding: 2rem;">
  <div class="logo-wrapper">
    <div class="ball-container">
      <div class="hologram-ball" id="ball"></div>
    </div>
  </div>

  <nav class="mk-nav">
    <!-- 네비게이션 생략 -->
  </nav>
</header>

<style>
  .ball-container {
    position: relative;
    width: 100%;
    height: 80px;
    overflow: hidden;
    background: transparent;
  }

  .hologram-ball {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #ff00cc, #00ffff, #ffff00, #ff0000);
    background-size: 400%;
    animation: shimmer 3s linear infinite;
    box-shadow:
      0 0 6px #fff,
      0 0 12px #0ff,
      0 0 24px rgba(255, 0, 255, 0.3);
    filter: blur(0.5px);
  }

  @keyframes shimmer {
    0% { background-position: 0% 50%; }
    100% { background-position: 400% 50%; }
  }
</style>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    const ball = document.getElementById('ball');
    let posY = 0;
    let velocity = 0;
    const gravity = 0.5;
    const bounce = -0.6;
    const floor = 40; // 공이 튈 수 있는 최대 Y 좌표

    function animate() {
      velocity += gravity;
      posY += velocity;

      if (posY >= floor) {
        posY = floor;
        velocity *= bounce;

        if (Math.abs(velocity) < 0.8) {
          ball.style.top = `${floor}px`;
          return;
        }
      }

      ball.style.top = `${posY}px`;
      requestAnimationFrame(animate);
    }

    animate();
  });
</script>