  height: 2px;
  background: #e6ccff;
  transform: translate(-50%, -50%);
  filter: blur(6px);
  opacity: 0.4;
  pointer-events: none;
  z-index: -1;
}

.glow-ball::after {
  width: 2px;
  height: 60px;
