<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>MarsKeys Masonry</title>
    <link rel="stylesheet" href="/assets/css/marskeys.css" />
  </head>
  <body>
    <main class="grid">
      <div class="grid-sizer"></div>

      <div class="grid-item tall">Tall</div>
      <div class="grid-item small">Small</div>
      <div class="grid-item big">Big</div>
      <div class="grid-item">Normal</div>
      <div class="grid-item tall">Tall again</div>
      <div class="grid-item small">Small again</div>
      <div class="grid-item">More</div>
    </main>

    <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
    <script>
      function runMasonry() {
        new Masonry('.grid', {
          itemSelector: '.grid-item',
          columnWidth: '.grid-sizer',
          gutter: 10,
          percentPosition: true
        });
      }
    
      window.addEventListener('load', runMasonry);
      window.addEventListener('resize', () => {
        runMasonry(); // 💡 화면 크기 바뀔 때마다 Masonry 다시 적용
      });
    </script>
  </body>
</html>
