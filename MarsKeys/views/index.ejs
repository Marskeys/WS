    <script src="https://www.youtube.com/iframe_api"></script>
    <script>
      const players = {}; // player Í∞ùÏ≤¥ Ï†ÄÏû•Ïö©
    
      // Ïú†ÌäúÎ∏å APIÍ∞Ä Î°úÎìúÎêòÎ©¥ Ìò∏Ï∂úÎê®
      function onYouTubeIframeAPIReady() {
        document.querySelectorAll('.video-wrapper').forEach(wrapper => {
          const videoId = wrapper.dataset.videoId;
          const playerId = wrapper.dataset.playerId;
    
          players[playerId] = new YT.Player(playerId, {
            videoId: videoId,
            playerVars: {
              autoplay: 0,
              rel: 0,
              playsinline: 1
            },
            events: {
              'onReady': () => {
                const button = wrapper.querySelector('.play-button');
                button.addEventListener('click', () => {
                  wrapper.querySelector('.video-thumbnail').remove();
                  players[playerId].playVideo();
                });
              }
            }
          });
        });
      }

      const items = document.querySelectorAll('.grid-item');
const ballContainer = document.getElementById('orbit-balls');
const ballCount = 5; // Ïó¨Îü¨ Í∞úÏùò Í≥µ
const delayBetween = 700; // Î∞ÄÎ¶¨Ï¥à

let balls = [];

// Í≥µ Ïó¨Îü¨ Í∞ú ÎßåÎì§Í∏∞
for (let i = 0; i < ballCount; i++) {
  const b = document.createElement('div');
  b.className = 'orbit-ball';
  ballContainer.appendChild(b);
  balls.push(b);
}

// Í≤ΩÎ°ú Í≥ÑÏÇ∞ Ìï®Ïàò (ÏãúÍ≥Ñ Î∞©Ìñ• ÌÖåÎëêÎ¶¨ Îî∞ÎùºÍ∞ê)
function getBoxPath(box) {
  const rect = box.getBoundingClientRect();
  const padding = 4;
  const x0 = rect.left + window.scrollX - padding;
  const y0 = rect.top + window.scrollY - padding;
  const w = rect.width + padding * 2;
  const h = rect.height + padding * 2;
  return [
    [x0, y0],
    [x0 + w, y0],
    [x0 + w, y0 + h],
    [x0, y0 + h],
    [x0, y0]
  ];
}

// ÌïòÎÇòÏùò Í≥µÏùÑ path Îî∞Îùº ÏõÄÏßÅÏù¥Í∏∞
function moveBall(ball, path, next) {
  let i = 0;

  function moveSegment() {
    if (i >= path.length - 1) return next();
    const [x1, y1] = path[i];
    const [x2, y2] = path[i + 1];
    const dx = (x2 - x1) / 20;
    const dy = (y2 - y1) / 20;
    let step = 0;

    function stepMove() {
      if (step <= 20) {
        ball.style.left = (x1 + dx * step) + 'px';
        ball.style.top = (y1 + dy * step) + 'px';
        step++;
        requestAnimationFrame(stepMove);
      } else {
        i++;
        moveSegment();
      }
    }

    stepMove();
  }

  moveSegment();
}

// ÏàúÏ∞®Ï†ÅÏúºÎ°ú Í∞Å Î∞ïÏä§Î•º ÎèåÍ≤å ÌïòÍ∏∞
function startLoop(ball, offset = 0) {
  let current = offset % items.length;

  function loop() {
    const box = items[current];
    const path = getBoxPath(box);
    moveBall(ball, path, () => {
      current = (current + 1) % items.length;
      setTimeout(loop, 300); // Îã§Ïùå Î∞ïÏä§ Ïù¥Îèô Ï†Ñ ÏÇ¥Ïßù ÌÖÄ
    });
  }

  loop();
}

// ÏãúÏûë
balls.forEach((ball, i) => {
  setTimeout(() => startLoop(ball, i), i * delayBetween);
});


    </script>
    
    
    

