<!doctype html>
<html lang="ko">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <title>서경실·한주원 여행 루트</title>
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="default" />
  <meta name="theme-color" content="#ffffff" />
  <style>
    :root{
      --bg: #f5f7fb;
      --card: #ffffff;
      --text: #111827;
      --muted: #6b7280;
      --accent: #2563eb;
      --border: #e5e7eb;
      --radius: 18px;
      --gap: 16px;
    }
    *{box-sizing:border-box}
    html,body{height:100%}
    body{margin:0; font-family:-apple-system,BlinkMacSystemFont,"Apple SD Gothic Neo","Segoe UI",Roboto,"Noto Sans KR",Helvetica,Arial,sans-serif; background:linear-gradient(180deg,#f8fafc,#f3f4f6); color:var(--text)}
    header{position:sticky; top:0; z-index:10; backdrop-filter:saturate(120%) blur(8px); background:rgba(255,255,255,.86); border-bottom:1px solid var(--border)}
    .wrap{max-width:780px; margin:0 auto; padding: 12px var(--gap)}
    h1{margin:2px 0 6px; font-size:26px; letter-spacing:.2px}
    .dates{color:var(--muted); font-size:14px}
    main{padding: 16px var(--gap) 28px}
    .card{background:var(--card); border:1px solid var(--border); border-radius:var(--radius); padding:14px; box-shadow:0 6px 24px rgba(17,24,39,.06)}

    /* 아코디언 */
    details.day{border:1px solid var(--border); border-radius:14px; background:#ffffff; margin:10px 0; overflow:hidden}
    details.day[open]{background:#f9fafb}
    details.day summary{
      list-style:none; cursor:pointer; padding:14px 44px 14px 14px; position:relative; font-size:17px; font-weight:700; display:flex; align-items:center; gap:10px
    }
    details.day summary::marker{display:none}
    .arrow{position:absolute; right:12px; top:0; bottom:0; display:grid; place-items:center; width:28px}
    .arrow svg{width:18px; height:18px; transition:transform .2s ease; color:#374151}
    details[open] .arrow svg{transform:rotate(180deg)}

    ul.plan{list-style:none; margin:0; padding:0 12px 12px}
    ul.plan li{display:grid; grid-template-columns:80px 1fr; gap:10px; align-items:start; padding:10px; border:1px solid var(--border); border-radius:10px; background:#ffffff; margin:8px 0}
    .time{font:600 13px/1.3 ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; color:#374151}
    .spot{font-size:15px}
    .memo{color:var(--muted); font-size:13px; margin-top:4px}

    .muted{color:var(--muted)}
  </style>
</head>
<body>
  <header>
    <div class="wrap">
      <h1 id="title">서경실과 한주원의 여행 루트</h1>
      <div id="dateRange" class="dates">2025. 09. 13. (토) ~ 2025. 09. 15. (월)</div>
    </div>
  </header>

  <main class="wrap">
    <section class="card">
      <div class="muted" style="margin-bottom:8px">각 날짜 제목 오른쪽 화살표를 눌러 일정을 펼치세요.</div>
      <div id="accordion"></div>
    </section>
  </main>

  <script>
    const itinerary = [
      {
        date: '2025-09-13',
        title: '9월 13일 (토) 마산에서 결혼식 및 통영으로 이동',
        items: [
          { time: '13:20', spot: '결혼식', memo: '장소: 경남 창원시 마산합포구 해안대로 317 SKY VIEW HOTEL 13층' },
          { time: '16:30', spot: '터미널로 이동 (카카오택시)', memo: '스카이뷰 호텔 앞 → 마산 남부 시외버스 터미널 · 소요 8분 · 예상 6,000원' },
          { time: '17:12', spot: '시외버스: 마산 남부 → 통영 종합', memo: '소요 1시간 8분 · 요금 8,700원(인당)\n<버스 시간표> 16:20~17:28, 17:05~18:13, 17:12~18:20, 17:43~18:51, …' },
          { time: '18:30', spot: '시내버스: 터미널 → 스탠포드 호텔 앤 리조트', memo: '노선 128/104/101/141 · 약 40분 · 요금 정보 미상(현장확인) · (정확한 출발시간 아님)' },
          { time: '19:15', spot: '호텔 체크인 및 저녁/휴식', memo: '' }
        ]
      },
      {
        date: '2025-09-14',
        title: '9월 14일 (일) 통영 여행',
        items: [
          { time: '08:00', spot: '호텔 조식', memo: '' },
          { time: '10:00', spot: '추가 예정', memo: '' },
          { time: '13:00', spot: '추가 예정', memo: '' },
          { time: '16:00', spot: '추가 예정', memo: '' },
          { time: '19:00', spot: '추가 예정', memo: '' }
        ]
      },
      {
        date: '2025-09-15',
        title: '9월 15일 (월) KTX 타고 귀가',
        items: [
          { time: '09:00', spot: '추가 예정', memo: '' },
          { time: '12:00', spot: '추가 예정', memo: '' },
          { time: '15:00', spot: '추가 예정', memo: '' }
        ]
      }
    ];

    const $acc = document.getElementById('accordion');
    $acc.innerHTML = itinerary.map(day => {
      const items = day.items.map(it => `
        <li>
          <div class="time">${it.time}</div>
          <div>
            <div class="spot">${it.spot}</div>
            ${it.memo ? `<div class="memo">${it.memo}</div>` : ''}
          </div>
        </li>`).join('');
      return `
        <details class="day">
          <summary>
            ${day.title}
            <span class="arrow" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
            </span>
          </summary>
          <ul class="plan">${items}</ul>
        </details>`;
    }).join('');

    try{
      const today = new Date();
      const ymd = today.toISOString().slice(0,10);
      const idx = itinerary.findIndex(d => d.date === ymd);
      if(idx >= 0){
        const details = document.querySelectorAll('details.day')[idx];
        if(details) details.setAttribute('open','');
      }
    }catch(e){}
  </script>
</body>
</html>
