<!DOCTYPE html>
<html lang="<%= lang || 'ko' %>">
<head>
  <title>회원가입 | BlindLove</title>
  <link rel="stylesheet" href="/assets/css/signup.css" />
  <%- include('partials/head') %> 
  <style>
    .notice-text {
      text-align: center;
      color: #c00;
      font-size: 1rem;
      margin-bottom: 1.5rem;
      font-weight: bold;
    }
    .notice-wrap {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
      padding: 0 0.5rem;
    }
    .back-home-link {
      font-size: 0.9rem;
      color: #0077cc;
      text-decoration: none;
    }
    .back-home-link:hover {
      text-decoration: underline;
    }
    .error-msg {
      color: #c00;
      text-align: center;
      margin-bottom: 1rem;
    }
    .check-msg {
      font-size: 0.85rem;
      color: #888;
      margin-bottom: 0.75rem;
    }
  </style>
</head>
<body class="no-fixed-footer">
  <%- include('partials/header', {
        isSearch: isSearch || false,
        searchKeyword: searchKeyword || '',
        selectedCategory: selectedCategory || null,
        locale: locale || {},
        categories: categories || [],
        pagination: pagination || { current: 1, total: 1, range: [1] }
      }) %>

  <div class="signup-container">
    <div class="logo-wrap">
      <img src="/assets/images/signup.svg" alt="BlindLove 로고" />
    </div>

    <div class="notice-wrap">
      <h2 class="notice-text">회원가입</h2>
      <a href="/" class="back-home-link">홈페이지로 돌아가기</a>
    </div>

    <% if (error) { %>
      <div class="error-msg"><%= error %></div>
    <% } %>

    <form action="/signup" method="POST">
      <div class="input-with-button">
        <input type="text" name="username" placeholder="닉네임" required />
        <button type="button" class="check-btn" onclick="checkNickname()">중복확인</button>
      </div>
      <div id="nickname-msg" class="check-msg"></div>

      <div class="input-with-button">
        <input type="text" name="user_id" placeholder="아이디" required />
        <button type="button" class="check-btn" onclick="checkId()">중복확인</button>
      </div>
      <div id="id-msg" class="check-msg"></div>

      <input type="email" name="email" placeholder="이메일 (선택사항)" />
      <input type="password" name="password" placeholder="비밀번호" required />
      <button type="submit" class="signup-btn">가입하기</button>
    </form>

    <div class="extra">
      이미 계정이 있으신가요? <a href="/login">로그인</a>
    </div>
  </div>

  <%- include('partials/footer') %>
  <%- include('partials/scripts') %>

  <script>
    async function checkId() {
      const userId = document.querySelector('input[name="user_id"]').value;
      if (!userId) return alert("아이디를 입력해주세요.");
      try {
        const res = await fetch(`/api/check-id?id=${encodeURIComponent(userId)}`);
        const data = await res.json();
        document.getElementById('id-msg').textContent = data.exists
          ? "이미 사용 중인 아이디입니다."
          : "사용 가능한 아이디입니다.";
      } catch (err) {
        console.error(err);
        alert("아이디 중복 확인 중 오류가 발생했습니다.");
      }
    }

    async function checkNickname() {
      const nickname = document.querySelector('input[name="username"]').value;
      if (!nickname) return alert("닉네임을 입력해주세요.");
      try {
        const res = await fetch(`/api/check-nickname?nickname=${encodeURIComponent(nickname)}`);
        const data = await res.json();
        document.getElementById('nickname-msg').textContent = data.exists
          ? "이미 사용 중인 닉네임입니다."
          : "사용 가능한 닉네임입니다.";
      } catch (err) {
        console.error(err);
        alert("닉네임 중복 확인 중 오류가 발생했습니다.");
      }
    }
  </script>
</body>
</html>
