      /* ë‚´ìš© êµì²´ ê°ì§€ â†’ ì°¸ì¡° ê°±ì‹  */
      const mo = new MutationObserver(() => {
        const cur = panel.querySelector('.panel-card');
        if (cur !== scroller) { unbind(); bind(); }
      });
