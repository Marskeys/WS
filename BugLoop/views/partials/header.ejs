 <script>
  const panel = document.querySelector('.sidebar-extension-panel');
const text = document.querySelector('.background-text');

if (panel && text) {
  panel.addEventListener('scroll', () => {
    const scrollY = panel.scrollTop;

    // Ïª§Ïßê
    const scale = 1 + scrollY / 500;
    text.style.transform = `scale(${scale})`;

    // ÌùêÎ†§Ïßê
    const fade = Math.min(scrollY / 400, 1);
    text.style.color = `rgba(227, 227, 227, ${1 - fade})`;

    // üî• Î∞∞Í≤ΩÏÉâ ÎèôÍ∏∞Ìôî (ÏßÑÌïú ‚Üí Ìà¨Î™ÖÌïú ÌöåÏÉâ)
    const alpha = 1 - fade; // 1 ‚Üí 0
    panel.style.backgroundColor = `rgba(44, 47, 51, ${alpha})`; // #2c2f33
  });
}
</script>

