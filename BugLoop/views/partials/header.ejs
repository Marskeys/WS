    const bubble = wrapper.querySelector('#hardware-hint');
    const label  = wrapper.querySelector('#hardware-label');
    const close  = wrapper.querySelector('.hint-close');
  
    const hidden = localStorage.getItem(KEY) === '1';
    const show = () => {
      if (!bubble) return;
      bubble.style.display = 'inline-flex';
      bubble.setAttribute('aria-hidden', 'false');
    };
    const hide = () => {
      if (!bubble) return;
      bubble.style.display = 'none';
      bubble.setAttribute('aria-hidden', 'true');
    };
  
    // 첫 진입 시(숨김 저장 없으면) 보여주기
    if (!hidden) show();
  
    // 닫기(X)
    close?.addEventListener('click', () => {
      localStorage.setItem(KEY, '1');
      hide();
      // 포커스 되돌리기 (접근성)
      label?.focus?.();
    });
  
    // ESC로 닫기 (접근성)
    bubble?.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        localStorage.setItem(KEY, '1');
        hide();
        label?.focus?.();
      }
    });
  
    // 라이트/다크 모드 전환, 리사이즈 등 레이아웃 변화에도 자연스럽게 보이도록
    window.addEventListener('panel:navigated', () => {
      if (localStorage.getItem(KEY) === '1') hide();
      else show(); /* ⬅️ 추가: 숨김 설정이 아니면 탭 전환 후에도 다시 표시 */
    });
  })();
  </script>

