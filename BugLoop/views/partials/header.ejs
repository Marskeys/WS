  // ì´ˆê¸° í…Œë§ˆ ì„¤ì •
  initTheme();
  /* ---------------------------------------------------- */


  /* ---------- ê¸°ì¡´ ì–¸ì–´ ë©”ë‰´ í¬í„¸ ë¡œì§ ìœ ì§€ ---------- */
  if (!langBtn || !langMenu) return; // ì–¸ì–´ ë²„íŠ¼/ë©”ë‰´ ì—†ìœ¼ë©´ ì´í›„ ë¡œì§ ìŠ¤í‚µ

  let isOpen = false;
  let lastFocus = null;

  const openMenu = () => {
    if (isOpen) return;
    isOpen = true;
    lastFocus = document.activeElement;

    // aria
    langBtn.setAttribute('aria-expanded','true');
    langMenu.setAttribute('aria-hidden','false');

    // NOTE: í¬í„¸ ë¡œì§ì€ ìœ„ìª½ 'lang-menu í¬í„¸' ìŠ¤í¬ë¦½íŠ¸ì—ì„œ DOMContentLoaded ì´í›„ ì‹¤í–‰ë˜ë¯€ë¡œ,
    // ì´ í•¨ìˆ˜ ë‚´ì—ì„œëŠ” í¬í„¸ ì´ë™ ë° ì¢Œí‘œ ê³„ì‚°ì„ ìƒëµí•˜ê³ , 'lang-menu í¬í„¸' ìŠ¤í¬ë¦½íŠ¸ê°€
    // í¬í„¸ ë¡œì§ì„ ì‹¤í–‰í–ˆë‹¤ê³  ê°€ì •í•©ë‹ˆë‹¤. (ì‹¤ì œë¡œëŠ” ì¤‘ë³µ ì‹¤í–‰ ë°©ì§€ë¥¼ ìœ„í•´ í•©ì³ì•¼ í•¨)
    // ì—¬ê¸°ì„œëŠ” `header.js`ì™€ EJS `<script>`ê°€ ë¶„ë¦¬ë˜ì–´ ì‹¤í–‰ë˜ëŠ” í™˜ê²½ì„ ê°€ì •í•˜ì§€ ì•Šê³ 
    // ìµœì¢…ì ìœ¼ë¡œ í•˜ë‚˜ì˜ íŒŒì¼ì— í†µí•©ëœ ìƒíƒœë¡œ ê°€ì •í•˜ë¯€ë¡œ, ìœ„ìª½ í¬í„¸ ìŠ¤í¬ë¦½íŠ¸ê°€ ì‹¤í–‰ë˜ì—ˆë‹¤ê³  íŒë‹¨í•˜ê³ 
    // ì´ í•¨ìˆ˜ëŠ” ê°„ë‹¨í•˜ê²Œ aria ì†ì„±ë§Œ ì²˜ë¦¬í•©ë‹ˆë‹¤.
    
    // í¬í„¸ ìŠ¤í¬ë¦½íŠ¸ê°€ ë©”ë‰´ë¥¼ ë„ìš°ëŠ” ì—­í• ì„ í•˜ë¯€ë¡œ, ì—¬ê¸°ì„œëŠ” í¬ì»¤ìŠ¤ë§Œ ì´ë™í•©ë‹ˆë‹¤.
    setTimeout(() => {
      // ì²« í¬ì»¤ìŠ¤(í˜„ì¬ ì–¸ì–´)
      const current = langMenu.querySelector('.lang-option.active-lang') || langMenu.querySelector('.lang-option');
      current?.setAttribute('tabindex','0');
      current?.focus();

      // ì™¸ë¶€ í´ë¦­/ìŠ¤í¬ë¡¤/ë¦¬ì‚¬ì´ì¦ˆ/ESCë¡œ ë‹«ê¸°
      document.addEventListener('mousedown', onDocDown, { capture:true });
      window.addEventListener('scroll', closeMenu, { passive:true });
      window.addEventListener('resize', closeMenu);
      document.addEventListener('keydown', onKey);
    }, 0);
  };

  const closeMenu = () => {
    if (!isOpen) return;
    isOpen = false;
    langBtn.setAttribute('aria-expanded','false');
    langMenu.setAttribute('aria-hidden','true');

    // íƒ­ ìˆœì„œ ë³µêµ¬
    langMenu.querySelectorAll('.lang-option').forEach(a => a.setAttribute('tabindex','-1'));

    document.removeEventListener('mousedown', onDocDown, { capture:true });
    window.removeEventListener('scroll', closeMenu);
    document.removeEventListener('keydown', onKey);
    
    // NOTE: í¬í„¸ ìŠ¤í¬ë¦½íŠ¸ê°€ ë©”ë‰´ë¥¼ DOMì—ì„œ ì œê±°/ì›ë³µí•˜ë¯€ë¡œ, ì—¬ê¸°ì„œëŠ” í¬ì»¤ìŠ¤ë§Œ ë°˜í™˜í•©ë‹ˆë‹¤.

    // í¬ì»¤ìŠ¤ ë°˜í™˜
    lastFocus?.focus?.();
  };

  const onDocDown = (e) => {
    if (e.target === langBtn || langBtn.contains(e.target)) return;
    if (e.target === langMenu || langMenu.contains(e.target)) return;
    closeMenu();
  };

  const onKey = (e) => {
    if (e.key === 'Escape') { e.stopPropagation(); closeMenu(); return; }

    // ê°„ë‹¨í•œ ë©”ë‰´ í‚¤ë³´ë“œ ë‚´ë¹„ê²Œì´ì…˜
    const items = Array.from(langMenu.querySelectorAll('.lang-option'));
    const idx = items.indexOf(document.activeElement);
    if (e.key === 'ArrowDown') {
      e.preventDefault();
      const next = items[(idx + 1 + items.length) % items.length];
      next?.focus();
    }
    if (e.key === 'ArrowUp') {
      e.preventDefault();
      const prev = items[(idx - 1 + items.length) % items.length];
      prev?.focus();
    }
    if (e.key === 'Home') { e.preventDefault(); items[0]?.focus(); }
    if (e.key === 'End')  { e.preventDefault(); items[items.length-1]?.focus(); }
  };

  langBtn.addEventListener('click', (e) => {
    e.preventDefault();
    isOpen ? closeMenu() : openMenu();
  });

  // ë²„íŠ¼ì—ì„œ Space/Enterë¡œë„ ì—´ê¸°
  langBtn.addEventListener('keydown', (e) => {
    if (e.key === ' ' || e.key === 'Enter' || e.key === 'ArrowDown') {
      e.preventDefault();
      openMenu();
    }
  });
})();
