<script>
  (() => {
    // ì§‘ ì•„ì´ì½˜/ë¡œê³  ë‘˜ ë‹¤ ì¡ë˜, í† ê¸€ë²„íŠ¼ì€ ì œì™¸
    const homeEls = document.querySelectorAll('.vscode-sidebar a.sidebar-icon[data-tab="home"]:not(.toggle-extension)');
  
    const stripLang = (p) => {
      const path = (p || location.pathname).replace(/[#?].*$/, ''); // í•´ì‹œ/ì¿¼ë¦¬ ì œê±°
      const noLang = path.replace(/^\/(ko|en|fr|zh|ja)(?:\/|$)/, '');
      return noLang === '' ? '/' : noLang.replace(/\/$/, '') || '/';
    };
    const isHomePath = (p) => stripLang(p) === '/';
  
    const setHomeActive = (flag) => {
      homeEls.forEach(el => {
        el.classList.toggle('active', flag);
        // í˜¹ì‹œ CSSê°€ <i>ì— ì§ì ‘ ê±¸ë ¤ìˆì„ ê²½ìš° ëŒ€ë¹„
        el.querySelector('i')?.classList.toggle('active', flag);
      });
    };
  
    const sync = () => setHomeActive(isHomePath(location.pathname));
  
    // ì´ˆê¸° ë™ê¸°í™” (DOMContentLoaded ì „/í›„ ëª¨ë‘ ì»¤ë²„)
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', sync, { once: true });
    } else {
      sync();
    }
  
    // íŒ¨ë„ ë„¤ë¹„(ë¶€ë¶„ ë¡œë“œ) í´ë¦­ ì‹œ ì¦‰ì‹œ ë°˜ì˜
    document.addEventListener('click', (e) => {
      const a = e.target.closest('a[data-panel-link]');
      if (!a) return;
      const pn = new URL(a.getAttribute('href') || '/', location.origin).pathname;
      setHomeActive(isHomePath(pn));
    });
  
    // ë’¤ë¡œ/ì•ìœ¼ë¡œ ì´ë™ ì‹œ ë°˜ì˜
    window.addEventListener('popstate', sync);
  
    // SPA ë„¤ë¹„ê²Œì´ì…˜ í›…í‚¹ (pushState/replaceState ì‹œê·¸ë„)
    ['pushState','replaceState'].forEach(fn => {
      const orig = history[fn];
      history[fn] = function(...args){
        const ret = orig.apply(this, args);
        window.dispatchEvent(new Event('panel:navigated'));
        return ret;
      };
    });
    window.addEventListener('panel:navigated', sync);
  })();
</script>

<!-- âœ… ì¶”ê°€: íƒ­ ë¡œì§ ë¶„ë¦¬ & íŒ¨ë„ ë‹«í˜ ì‹œ íƒ­ active í•´ì œ (í™ˆì€ ê²½ë¡œ ê¸°ì¤€ ìœ ì§€) -->
<script>
  (() => {
    // í™ˆ ìƒíƒœë¥¼ "ê²½ë¡œ ê¸°ì¤€"ìœ¼ë¡œë§Œ ë‹¤ì‹œ ë³´ì •í•˜ëŠ” í•¨ìˆ˜ (ë‹¤ë¥¸ ìŠ¤í¬ë¦½íŠ¸ì™€ ë™ì¼í•œ ê¸°ì¤€)
    function syncHomeByLocation() {
      const homeEls = document.querySelectorAll('.vscode-sidebar a.sidebar-icon[data-tab="home"]:not(.toggle-extension)');
      const raw = location.pathname.replace(/[#?].*$/, '');
      const noLang = raw.replace(/^\/(ko|en|fr|zh|ja)(?:\/|$)/, '');
      const norm = noLang === '' ? '/' : noLang.replace(/\/$/, '') || '/';
      const isHome = (norm === '/');
      homeEls.forEach(el => {
        el.classList.toggle('active', isHome);
        el.querySelector('i')?.classList.toggle('active', isHome);
      });
    }

    // í™ˆì„ ì œì™¸í•œ íƒ­ë“¤ë§Œ ì•„ì´ì½˜ activeë¥¼ ê´€ë¦¬
    const tabSelector = '.vscode-sidebar .sidebar-icon[data-tab]:not([data-tab="home"]):not(.toggle-extension):not([data-tab="write"])';
    const tabIcons = Array.from(document.querySelectorAll(tabSelector));
    const sideBar = document.querySelector('.vscode-sidebar');

    function activateOnlyThisTabIcon(target){
      tabIcons.forEach(i => i.classList.toggle('active', i === target));
    }

    // íƒ­ í´ë¦­ ì‹œ: í•´ë‹¹ íƒ­ë§Œ activeë¡œ, í™ˆì€ ê²½ë¡œ ê¸°ì¤€ìœ¼ë¡œ ì¬ë³´ì •(í™ˆì´ë©´ ê³„ì† ì¼œì§)
    sideBar?.addEventListener('click', (e) => {
      const icon = e.target.closest(tabSelector);
      if (!icon) return;
      activateOnlyThisTabIcon(icon);
      // header.js ë“±ì´ ë‹¤ë¥¸ í† ê¸€ì„ ê±´ë“œë¦´ ìˆ˜ ìˆì–´ ë‹¤ìŒ í‹±ì— í™ˆ ë³´ì •
      setTimeout(syncHomeByLocation, 0);
    });

    // í™”ì‚´í‘œ í† ê¸€ë¡œ íŒ¨ë„ ë‹«íˆë©´: íƒ­ active ì „ë¶€ í•´ì œ (í™ˆì€ ê²½ë¡œ ê¸°ì¤€ ìœ ì§€)
    const toggleBtn = document.querySelector('.vscode-sidebar .toggle-extension');
    const extensionPanel = document.querySelector('.sidebar-extension-panel');
    let panelOpen = extensionPanel ? (getComputedStyle(extensionPanel).display !== 'none' && !extensionPanel.classList.contains('hidden')) : false;

    toggleBtn?.addEventListener('click', () => {
      // header.jsê°€ DOMì„ ê±´ë“œë¦° ë’¤ ìƒíƒœë¥¼ í™•ì¸í•˜ê¸° ìœ„í•´ ë‹¤ìŒ í‹±ì—ì„œ íŒì •
      setTimeout(() => {
        const nowOpen = extensionPanel ? (getComputedStyle(extensionPanel).display !== 'none' && !extensionPanel.classList.contains('hidden')) : !panelOpen;
        if (!nowOpen) {
          tabIcons.forEach(i => i.classList.remove('active')); // í”„ë¡œí•„/ê²€ìƒ‰/ì„¤ì • ë“± ë„ê¸°
          syncHomeByLocation();                                 // í™ˆì€ ê²½ë¡œëŒ€ë¡œ ìœ ì§€
        }
        panelOpen = nowOpen;
      }, 0);
    });
  })();
</script>

