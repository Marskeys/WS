  const updateTheme = (theme) => {
    const isDark = theme === 'dark';
    
    htmlEl.classList.toggle('dark', isDark);

    localStorage.setItem(THEME_KEY, theme);
    // ì•„ì´ì½˜ ì—…ë°ì´íŠ¸ (ë‹¤í¬ ëª¨ë“œë©´ í•´(sun), ë¼ì´íŠ¸ ëª¨ë“œë©´ ë‹¬(moon))
