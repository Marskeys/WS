<%
  const PAGE_TITLE = (typeof metaTitle === 'string' && metaTitle.trim()) ? metaTitle.trim() : (locale?.meta?.title || 'BugLoop');
  const pageDesc = (typeof metaDescription === 'string' && metaDescription.trim()) ? metaDescription.trim() : '';
  const fallbackDesc = locale?.meta?.description || "웹 개발자 블로그 | 웹 개발 튜토리얼 & 온라인 코드 편집기, 그리고 초학제적 관점의 인사이트까지 한 곳에!";
  const rawDesc = pageDesc || fallbackDesc;
  const DESC = rawDesc.length > 160 ? (rawDesc.slice(0, 157) + '…') : rawDesc;
  const SITE_ORIGIN = 'https://bugloop.dev';
  const path = (typeof currentPath === 'string' && currentPath) ? currentPath : '/';
  const canonicalUrl = (typeof canonical === 'string' && canonical.trim()) ? canonical.trim() : (SITE_ORIGIN + path);
  const ogImage = (typeof metaImage === 'string' && metaImage.trim()) ? metaImage.trim() : '/assets/images/BugLoop2.png';
  const OG_IMAGE_ABS = /^https?:\/\//.test(ogImage) ? ogImage : (SITE_ORIGIN + ogImage);
  const isEditorPage = ['/write', '/edit', '/ko/write', '/en/write'].some(p => currentPath?.includes(p));
  const isBooksPage = currentPath?.includes('/books/');
-%>

