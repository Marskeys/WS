<title>
  <%= (typeof metaTitle === 'string' && metaTitle.trim())
        ? metaTitle.trim()
        : (locale?.meta?.title || 'Bug Loop') %>
</title>

<%
  /* ========================
     ⭐ 페이지 설명 구성
     ======================== */
  const pageDesc = (typeof metaDescription === 'string' && metaDescription.trim())
      ? metaDescription.trim()
      : '';

  const fallbackDesc =
      locale?.meta?.description ||
      "웹 개발자 블로그 | 웹 개발 튜토리얼 & 온라인 코드 편집기, 그리고 초학제적 관점의 인사이트까지 한 곳에!";

  const rawDesc = pageDesc || fallbackDesc;
  const DESC = rawDesc.length > 160 ? (rawDesc.slice(0,157) + '…') : rawDesc;

  /* ========================
     ⭐ Canonical / OG helpers
     ======================== */
  const SITE_ORIGIN = 'https://bugloop.dev';
  const path = (typeof currentPath === 'string' && currentPath) ? currentPath : '/';
  const canonicalUrl = (typeof canonical === 'string' && canonical.trim()) ? canonical.trim() : (SITE_ORIGIN + path);
  const ogImage = (typeof metaImage === 'string' && metaImage.trim()) ? metaImage.trim() : '/assets/BugLoop.png';
  const OG_IMAGE_ABS = /^https?:\/\//.test(ogImage) ? ogImage : (SITE_ORIGIN + ogImage);

  const PAGE_TITLE =
    (typeof metaTitle === 'string' && metaTitle.trim())
      ? metaTitle.trim()
      : (locale?.meta?.title || 'Bug Loop');

  /* ========================
     ⭐ 에디터 페이지 여부 판단
     ======================== */
  const isEditorPage =
      currentPath?.includes('/write') ||
      currentPath?.includes('/edit') ||
      currentPath?.includes('/ko/write') ||
      currentPath?.includes('/en/write');
%>

