<!-- Apply theme early (avoid FOUC) -->
<script>
  (function () {
    try {
      var saved = localStorage.getItem('theme-mode');
      var isDark = !saved || saved === 'dark';
      document.documentElement.classList.toggle('dark', isDark);
    } catch (e) {}
  })();
</script>

