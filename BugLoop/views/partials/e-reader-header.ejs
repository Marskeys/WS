<header class="app-header">
<div class="header-title"></div>
  <div class="header-controls">

    <!-- 홈 -->
    <button id="homeBtn" class="header-btn" title="<%= locale.ui.home %>">
      <i class="fas fa-home"></i>
      <span><%= locale.ui.home %></span>
    </button>

    <!-- 다크/라이트 모드 -->
    <button id="darkModeToggle" class="header-btn"
      title="<%= locale.ui.darkModeToggle %>"
      data-dark="<%= locale.ui.darkModeLabel %>"
      data-light="<%= locale.ui.darkModeLabelLight %>">

      <i class="fas fa-moon"></i>
      <span id="darkModeLabel"><%= locale.ui.darkModeLabel %></span>
    </button>

    <!-- 목차 -->
    <!-- <button id="tocToggle" class="header-btn" title="<%= locale.ui.tocButton %>"> -->
      <button id="tocToggle" class="header-btn"> 

      <i class="fas fa-list"></i>
      <span><%= locale.ui.tocButton %></span>
    </button>

  </div>
</header>
