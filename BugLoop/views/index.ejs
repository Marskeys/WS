<script>
const lang = "<%= lang %>";

let offset = 5;   // ì²˜ìŒì— posts.slice(0,5) ë¡œ 5ê°œ ë³´ì—¬ì¤¬ìœ¼ë‹ˆê¹Œ offsetë„ 5ë¶€í„° ì‹œì‘
let loading = false;

async function loadMorePosts() {
  if (loading) return;
  loading = true;

  try {
    const res = await fetch(`/api/recent-posts?offset=${offset}&limit=5&lang=${lang}`);
    const data = await res.json();
    
    // ğŸŒŸ API Response Data í™•ì¸ìš© ë¡œê·¸
    console.log("API Response Data:", data); 
  
    if (!data.posts || data.posts.length === 0) {
      document.getElementById("load-more-btn").style.display = "none";
      loading = false; // ë¡œë”© í•´ì œ
      return;
    }
  
    // === ìˆ˜ì •ëœ ë¶€ë¶„ ì‹œì‘: post.created_fmtì™€ post.preview ì‚¬ìš© ===
    offset += data.posts.length;
  
    const container = document.getElementById("posts-container");
    if (!container) {
      // ğŸŒŸ ID ì˜¤ë¥˜ê°€ ëœ¨ë©´ HTMLì˜ id="posts-container" ì˜¤íƒ€/ëˆ„ë½ì„ í™•ì¸í•´ì•¼ í•©ë‹ˆë‹¤.
      console.error("Posts container not found! (EJS ID í™•ì¸ ìš”ë§)");
      loading = false;
      return;
    }
  
    data.posts.forEach(post => {
      const el = document.createElement("div");
      el.className = "recent-post-item"; // âœ… í´ë˜ìŠ¤ í†µì¼
      
      // ğŸ’¡ post.created_fmt (ì„œë²„ì—ì„œ í˜•ì‹í™”ëœ ë‚ ì§œ) ì‚¬ìš©
      const formattedDate = post.created_fmt; 
  
      el.innerHTML = `
        <a href="/${lang}/post/${post.id}" class="recent-post-title">
          ${post.is_pinned ? '<span class="badge-pinned">ğŸ“Œ</span>' : ''}
          ${post.title}
        </a>
  
        <div class="recent-post-meta">
          <span>${post.author}</span>
          <span>Â·</span>
          <span>${formattedDate}</span>
        </div>
  
        <div class="recent-post-preview">
          ${post.preview} 
          </div>
      `;
      
      // ğŸŒŸ ë””ë²„ê¹… ë¡œê·¸: DOMì— ì¶”ê°€ ì§ì „, ìƒì„±ëœ HTML í™•ì¸
      console.log("HTML being added (Title:", post.title, ") :", el.innerHTML); 
      
      container.appendChild(el);
      console.log("Adding post:", post.title, "completed.");
    });
    // === ìˆ˜ì •ëœ ë¶€ë¶„ ë ===
  
    loading = false;
  } catch (error) {
      console.error("Error loading more posts or processing JSON (DOM/Parsing Error):", error);
      loading = false;
