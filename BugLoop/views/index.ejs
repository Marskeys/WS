            <div class="tabs-wrapper">
              <div class="tabs">
                <div class="tab-spacer"></div>
                <a href="/<%= lang %>/?category=all" class="tab <%= !selectedCategory && !isSearch ? 'active' : '' %>">
                  <%= locale.tabs.allPosts %>
                </a>
                
          
                <% if (isSearch) { %>
                  <div class="tab active"><%= locale.tabs.searchResults %></div>
