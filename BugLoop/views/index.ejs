    html { height: 100%; } 

    body {
      background: var(--bg);
      color: var(--ink);
      min-height: 100vh; 
      height: 100%;
      display: flex;
      flex-direction: column;
      transition: background 0.3s, color 0.3s;
    }

    .app-shell{
      padding: 16px 16px 16px calc(var(--chrome-gap) + 16px);
      padding-top: calc(50px + 16px);
