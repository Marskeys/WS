    .book-card {
      flex-shrink: 0;
      width: 230px;
      background: var(--panel);
      border-radius: var(--radius);
      overflow: hidden;
      color: var(--ink);
      transition: all 0.3s ease;
      scroll-snap-align: start;
      cursor: pointer;
      position: relative;
    }

