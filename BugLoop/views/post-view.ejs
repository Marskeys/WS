        e.preventDefault(); // í…ìŠ¤íŠ¸ ì„ íƒ ë°©ì§€
      });

      document.addEventListener('mousemove', (e) => {
        if (!isDragging) return;
        const dx = e.clientX - startX;
        const dy = e.clientY - startY;
        toc.style.left = `${startLeft + dx}px`;
        toc.style.top = `${startTop + dy}px`;
